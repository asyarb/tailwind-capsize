{
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "strictNullChecks": true,

    "moduleResolution": "node",

    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,

    "allowJs": true,
    "resolveJsonModule": true
  }
}
